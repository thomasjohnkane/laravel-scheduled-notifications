{
  "name": "thomasjohnkane/snooze",
  "description": "Schedule future notifications and reminders in Laravel",
  "license": "MIT",
  "keywords": [
    "scheduled",
    "notifications",
    "snooze",
    "delayed notifications"
  ],
  "type": "library",
  "authors": [
    {
      "name": "Thomas Kane",
      "email": "thomasjohnkane@gmail.com"
    }
  ],
  "require": {
    "php": ">=7.2",
    "illuminate/support": "~5.3 || ~6.0"
  },
  "require-dev": {
    "orchestra/testbench": "~3.8.0 || ~4.0.0",
    "phpunit/phpunit": "^8.0"
  },
  "autoload": {
    "psr-4": {
      "Thomasjohnkane\\Snooze\\": "src"
    }
  },
  "autoload-dev": {
    "psr-4": {
      "Thomasjohnkane\\Snooze\\Tests\\": "tests"
    },
    "files": [
      "vendor/phpunit/phpunit/src/Framework/Assert/Functions.php"
    ]
  },
  "scripts": {
    "test": "phpunit"
  },
  "extra": {
    "laravel": {
      "providers": [
        "Thomasjohnkane\\Snooze\\ServiceProvider"
      ]
    }
  },
  "config": {
    "preferred-install": "dist",
    "sort-packages": true,
    "optimize-autoloader": true
  }
}
